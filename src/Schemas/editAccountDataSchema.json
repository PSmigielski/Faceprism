{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "minProperties": 1,
    "properties": {
        "name": {
            "type": "string",
            "maxLength": 30
        },
        "surname": {
            "type": "string",
            "maxLength": 100
        },
        "date_of_birth": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
        },
        "gender": {
            "type": "string",
            "enum": [
                "male",
                "female"
            ]
        },
        "tag": {
            "type": "string",
            "maxLength": 50,
            "pattern": "@[a-zA-Z0-9_]{4,49}"
        }
    },
    "additionalProperties": false
}
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "email": {
            "type": "string",
            "maxLength": 128,
            "format": "email"
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 196
        },
        "name": {
            "type": "string",
            "maxLength": 30
        },
        "gender": {
            "type": "string",
            "enum": [
                "male",
                "female"
            ]
        },
        "tag": {
            "type": "string",
            "maxLength": 50,
            "pattern": "@[a-zA-Z0-9]{4,49}"
        },
        "bio": {
            "type": "string",
            "maxLength": 255,
            "minLength": 1
        },
        "surname": {
            "type": "string",
            "maxLength": 100
        },
        "date_of_birth": {
            "type": "string",
            "format": "date"
        }
    },
    "required": [
        "email",
        "password",
        "name",
        "surname",
        "date_of_birth",
        "gender",
        "tag"
    ],
    "additionalProperties": false
}